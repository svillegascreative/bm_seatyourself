<%= form_for @user do |f| %>
  <%= render "shared/errors", object: @user %>

  <div class="field">
    <%= f.radio_button :owner, "false" %>
    <%= f.label "I am a diner" %><br />
    <%= f.radio_button :owner, "true" %>
    <%= f.label "I am a restaurant owner" %>
  </div>
  <div class="field">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br/>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br/>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="form-actions">
    <%= f.submit %>
  </div>
<% end %>

<%= render @restaurant %>

<% if current_user %>
  <%= link_to "Make a reservation", new_restaurant_reservation_url(@restaurant.id) %>
<% else %>
  <%= link_to "Sign up", new_user_url %> to make a reservation!
  <%= link_to "Log in", new_session_url %> or
<% end %>

<% if current_user.owner? %>
  <%= link_to "Edit", edit_restaurant_path(@restaurant) %>
  <%= link_to "Delete", @restaurant, method: :delete, data: { confirm: "Are you sure you want to delete this?" } %>

<% end %>

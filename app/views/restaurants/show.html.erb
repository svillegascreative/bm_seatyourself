<h1> Restaurant Details </h1>

<%= render @restaurant %>

<% if @restaurant.user_id == current_user.id %>
  <p><%= link_to "Edit Your Restaurant", edit_restaurant_path(@restaurant) %></br>
  <%= link_to "Delete Your Restaurant", @restaurant, method: :delete, data:
    { confirm: "Are you sure you want to delete this?" } %></p>
<% elsif current_user %>
  <p><%= link_to "Make a reservation", new_restaurant_reservation_url(@restaurant.id) %></p>
<% end %>

<% if current_user == nil %>
  <p><%= link_to "Log in", new_session_url %> or
  <%= link_to "Sign up", new_user_url %> to make a reservation!</p>
<% end %>
